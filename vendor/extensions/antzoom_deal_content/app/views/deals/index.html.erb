<h1>Listing deals</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th>Status</th>
    <th>Created at</th>
    <th>Expired at</th>
    <th>Terminated at</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.category_type %></td>
    <td><%= deal.description %></td>
    <td><%= deal.status %></td>
    <td><%= deal.created_at %></td>
    <td><%= deal.expired_at %></td>
    <td><%= deal.terminated_at %></td>
    <td><%= deal.user_id %></td>
    <td><%= link_to 'Show', deal %></td>
    <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

