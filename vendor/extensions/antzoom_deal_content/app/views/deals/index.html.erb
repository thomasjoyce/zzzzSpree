<h1>Listing deals</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Description</th>
    <th>Status</th>
    <th>Created at</th>
    <th>Expired at</th>
    <th>Terminated at</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @deals.each do |deal| %>
  <tr>
    <td><%= deal.category_type %></td>
    <td><%= deal.description %></td>
    <td><%= deal.status %></td>
    <td><%= deal.created_at %></td>
    <td><%= deal.expired_at %></td>
    <td><%= deal.terminated_at %></td>
    <td><%= deal.user_id %></td>
   
	<td><%= link_to 'Show', brand_deal_path(@brand, deal) %></td>
	<td><%= link_to 'Edit', edit_brand_deal_path(@brand, deal) %></td>
	<td><%= link_to 'Destroy', [@brand, deal],  :method => :delete, :confirm => 'Are you sure?' %></td>

  </tr>
<% end %>
</table>

